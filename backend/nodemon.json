{
  "watch": [
    "src"
  ],
  "ext": "js,json",
  "ignore": [
    "src/uploads/**/*",
    "logs/**/*",
    "node_modules/**/*",
    "**/*.test.js",
    "**/*.spec.js"
  ],
  "exec": "node src/server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "legacyWatch": false
}